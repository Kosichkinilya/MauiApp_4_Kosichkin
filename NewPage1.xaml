<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp_4_Kosichkin.NewPage1">
    <VerticalStackLayout>
        <Label 
            Text="ручной расчет, ответ выводить после нажатия на кнопку Рассчитать. "
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <StackLayout>
            <RadioButton x:Name="History"                         GroupName="subject" Content="Культурология"    IsChecked="True" />
            <RadioButton x:Name="Cultural_Studies"                GroupName="subject" Content="Культурология"    IsChecked="True" />
            <RadioButton x:Name="Philosophy"                      GroupName="subject" Content="Философия"        IsChecked="True" />
            <RadioButton x:Name="Foreign_languagery"              GroupName="subject" Content="Иностранный язык" IsChecked="True" />

        </StackLayout>


        <StackLayout>
            <Button
                Text="Решить" 
                Clicked="Button_Clicked">
            </Button>

            <Entry x:Name="Entry" IsReadOnly="True"/>
        </StackLayout>

        
       
    </VerticalStackLayout>
</ContentPage>